<view class="head">
  <view class="head_item {{selected1?'head_itemActive':''}}" bindtap='selected1'>请假结果</view>
</view>
<view class="main {{selected?'show':'hidden'}}">
  <form bindsubmit="formSubmit">
    <view class='bg'>
      <view class='item'>
        \r\n\r\n\r\n\r\n\r\n\r\n年级：
        <input name='gradeName' placeholder="请输入年级" maxlength='15' class='bk'auto-focus />
      </view>
      <view class='item'>
        \r\n\r\n\r\n\r\n\r\n\r\n班级：
        <input name='className' placeholder="请输入班级" maxlength='15' class='bk'auto-focus />
      </view>
      <view class='item'>
        \r\n\r\n\r\n\r\n\r\n\r\n学号：
        <input name='studentNo' placeholder="请输入学号" maxlength='15' class='bk'auto-focus />
      </view>
      <view class='item'>
        请假天数：
        <input name='leaveDays' placeholder="请输入请假天数" maxlength='15' class='bk'auto-focus />
      </view>
         <view class='item'>
        起止时间：
        <input name='leaveDays' placeholder="请输入请假天数" maxlength='15' class='bk'auto-focus />
      </view>
      <view class='item'>
        请假类型：
          <input name='leaveType' placeholder="病假输1/事假输2" maxlength='15' type="number" class='bk'auto-focus />
        
      </view>
      <view class='item'>
        请假理由：
        <view class='bk'>
          <input name="leaveReason" placeholder="请输入请假理由" maxlength='500' auto-height/>
        </view>
      </view>
      <button class='btn' formType="submit">提交</button>
    </view>
  </form>
</view>

